<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d9d6d6"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="1"
    tools:context="com.example.trang.settings.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.15"
        android:background="@drawable/drawable_layout"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_view"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_language_black_24dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center">

            <TextView
                android:id="@+id/tvngonngu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvNgonNgu"
                android:textColor="#000"
                android:textSize="20sp" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.15"
        android:background="@drawable/drawable_layout"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_view1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_share_black_24dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center">

            <TextView
                android:id="@+id/tvchiase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvChiaSeApp"
                android:textColor="#000"
                android:textSize="20sp" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.18"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@drawable/drawable_layout"
        >
        <RelativeLayout
            android:layout_weight=".2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/img_view3"
                android:src="@drawable/ic_comment_black_24dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <TextView
                android:onClick="showRating"
                android:id="@+id/tvykien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvykien"
                android:textSize="20sp"
                android:textColor="#000"/>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.18"
        android:background="@drawable/drawable_layout"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_view4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_star_black_24dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center">

            <TextView
                android:id="@+id/tvdanhgia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvDanhGiaApp"
                android:textColor="#000"
                android:textSize="20sp" />
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>

